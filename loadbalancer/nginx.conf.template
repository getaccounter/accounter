
events {}

http {
    server {
        listen ${PORT};
        listen [::]:${PORT};

        location / {
            proxy_pass http://${WEB_HOST}:${WEB_PORT};
        }

        location /api/ {
            proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
            proxy_set_header Host $http_host;
            proxy_redirect off;
            proxy_pass http://${SERVER_HOST}:${SERVER_PORT}/;
        }
    }
}